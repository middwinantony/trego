<div class="min-h-screen bg-gray-50">
  <%= render partial: 'admin/shared/nav', locals: { active: 'rides' } %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Rides Management</h2>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex flex-wrap gap-2">
          <%= link_to "All", admin_rides_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Requested", admin_rides_path(status: 'requested'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'requested' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Accepted", admin_rides_path(status: 'accepted'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'accepted' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "In Progress", admin_rides_path(status: 'in_progress'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'in_progress' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Completed", admin_rides_path(status: 'completed'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'completed' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Cancelled", admin_rides_path(status: 'cancelled'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'cancelled' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
        </div>
      </div>
    </div>

    <!-- Rides Table -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @rides.each do |ride| %>
          <li>
            <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-indigo-600 truncate">
                      Ride #<%= ride.id %>
                    </p>
                    <div class="ml-2 flex-shrink-0 flex">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        <%= case ride.status
                            when 'requested' then 'bg-yellow-100 text-yellow-800'
                            when 'accepted' then 'bg-blue-100 text-blue-800'
                            when 'in_progress' then 'bg-indigo-100 text-indigo-800'
                            when 'completed' then 'bg-green-100 text-green-800'
                            when 'cancelled' then 'bg-red-100 text-red-800'
                            end %>">
                        <%= ride.status.titleize %>
                      </span>
                    </div>
                  </div>
                  <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <p class="flex items-center text-sm text-gray-500">
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        Rider: <%= ride.rider.name %>
                      </p>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Driver: <%= ride.driver&.name || 'Not assigned' %>
                      </p>
                    </div>
                  </div>
                  <div class="mt-2">
                    <p class="text-sm text-gray-700">
                      <span class="font-medium">From:</span> <%= ride.pickup %><br>
                      <span class="font-medium">To:</span> <%= ride.dropoff %>
                    </p>
                  </div>
                  <div class="mt-2 flex items-center text-sm text-gray-500">
                    <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Fare: $<%= number_with_precision(ride.fare, precision: 2) %>
                    <% if ride.payment %>
                      <span class="ml-4 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= ride.payment.status == 'succeeded' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                        Payment: <%= ride.payment.status.titleize %>
                      </span>
                    <% end %>
                  </div>
                </div>
                <div class="ml-5 flex-shrink-0">
                  <%= link_to "View Details", admin_ride_path(ride), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
