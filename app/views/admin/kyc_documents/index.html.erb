<div class="min-h-screen bg-gray-50">
  <%= render partial: 'admin/shared/nav', locals: { active: 'kyc' } %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">KYC Documents Management</h2>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex space-x-4">
          <%= link_to "All", admin_kyc_documents_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Pending", admin_kyc_documents_path(status: 'pending'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'pending' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Approved", admin_kyc_documents_path(status: 'approved'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'approved' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Rejected", admin_kyc_documents_path(status: 'rejected'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'rejected' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
        </div>
      </div>
    </div>

    <!-- KYC Documents Grid -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @kyc_documents.each do |doc| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-gray-900"><%= doc.document_type.titleize.gsub('_', ' ') %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case doc.status
                    when 'approved' then 'bg-green-100 text-green-800'
                    when 'rejected' then 'bg-red-100 text-red-800'
                    else 'bg-yellow-100 text-yellow-800'
                    end %>">
                <%= doc.status.titleize %>
              </span>
            </div>
            <dl class="space-y-2">
              <div>
                <dt class="text-sm text-gray-500">Driver</dt>
                <dd class="text-sm font-medium text-gray-900">
                  <%= link_to doc.user.name, admin_driver_path(doc.user), class: "text-indigo-600 hover:text-indigo-900" %>
                </dd>
              </div>
              <div>
                <dt class="text-sm text-gray-500">Submitted</dt>
                <dd class="text-sm text-gray-900"><%= time_ago_in_words(doc.created_at) %> ago</dd>
              </div>
            </dl>
            <div class="mt-4 flex space-x-2">
              <%= link_to "Review", admin_kyc_document_path(doc), class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% if doc.status == 'pending' %>
                <%= button_to "Approve", approve_admin_kyc_document_path(doc), method: :post, class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700", form: { data: { turbo: false } } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
