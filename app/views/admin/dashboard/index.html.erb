<div class="min-h-screen bg-gray-50">
  <%= render partial: 'admin/shared/nav', locals: { active: 'dashboard' } %>

  <!-- Main Content -->
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <!-- Stats Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
      <!-- Total Users -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Users</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @stats[:total_users] %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <span class="text-gray-600">Drivers: <%= @stats[:total_drivers] %></span> |
            <span class="text-gray-600">Customers: <%= @stats[:total_customers] %></span>
          </div>
        </div>
      </div>

      <!-- Pending Approvals -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Pending Drivers</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @stats[:pending_drivers] %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <%= link_to "Review Drivers", admin_drivers_path(status: 'pending'), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>

      <!-- Total Rides -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Rides</dt>
                <dd class="text-lg font-semibold text-gray-900"><%= @stats[:total_rides] %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <span class="text-green-600">Completed: <%= @stats[:completed_rides] %></span> |
            <span class="text-blue-600">Active: <%= @stats[:active_rides] %></span>
          </div>
        </div>
      </div>

      <!-- Total Revenue -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Total Revenue</dt>
                <dd class="text-lg font-semibold text-gray-900">$<%= number_with_precision(@stats[:total_revenue], precision: 2) %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <span class="text-sm text-gray-600">Active Subs: <%= @stats[:active_subscriptions] %></span>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="grid grid-cols-1 gap-5 lg:grid-cols-2">
      <!-- Recent Rides -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Rides</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <div class="flow-root">
            <ul class="-my-5 divide-y divide-gray-200">
              <% @recent_rides.each do |ride| %>
                <li class="py-4">
                  <div class="flex items-center space-x-4">
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-medium text-gray-900 truncate">
                        <%= ride.rider.name %> â†’ <%= ride.driver&.name || 'No driver' %>
                      </p>
                      <p class="text-sm text-gray-500 truncate">
                        <%= ride.pickup %> to <%= ride.dropoff %>
                      </p>
                      <p class="text-xs text-gray-400">
                        <%= time_ago_in_words(ride.created_at) %> ago
                      </p>
                    </div>
                    <div>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        <%= case ride.status
                            when 'requested' then 'bg-yellow-100 text-yellow-800'
                            when 'accepted' then 'bg-blue-100 text-blue-800'
                            when 'in_progress' then 'bg-indigo-100 text-indigo-800'
                            when 'completed' then 'bg-green-100 text-green-800'
                            when 'cancelled' then 'bg-red-100 text-red-800'
                            end %>">
                        <%= ride.status.titleize %>
                      </span>
                    </div>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="mt-6">
            <%= link_to "View all rides", admin_rides_path, class: "w-full flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        </div>
      </div>

      <!-- Pending Driver Approvals -->
      <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg leading-6 font-medium text-gray-900">Pending Driver Approvals</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <div class="flow-root">
            <ul class="-my-5 divide-y divide-gray-200">
              <% if @pending_drivers.any? %>
                <% @pending_drivers.each do |driver| %>
                  <li class="py-4">
                    <div class="flex items-center space-x-4">
                      <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 truncate">
                          <%= driver.name %>
                        </p>
                        <p class="text-sm text-gray-500 truncate">
                          <%= driver.email %>
                        </p>
                        <p class="text-xs text-gray-400">
                          KYC: <%= driver.kyc_status.titleize %>
                        </p>
                      </div>
                      <div class="flex space-x-2">
                        <%= button_to "Approve", approve_admin_driver_path(driver), method: :post, class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-white bg-green-600 hover:bg-green-700", form: { data: { turbo: false } } %>
                        <%= button_to "Reject", reject_admin_driver_path(driver), method: :post, class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-white bg-red-600 hover:bg-red-700", form: { data: { turbo: false } } %>
                      </div>
                    </div>
                  </li>
                <% end %>
              <% else %>
                <li class="py-4">
                  <p class="text-sm text-gray-500 text-center">No pending driver approvals</p>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="mt-6">
            <%= link_to "View all drivers", admin_drivers_path, class: "w-full flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
