<div class="min-h-screen bg-gray-50">
  <%= render partial: 'admin/shared/nav', locals: { active: 'vehicles' } %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between mb-6">
      <h2 class="text-2xl font-bold text-gray-900">Vehicles Management</h2>
    </div>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex space-x-4">
          <%= link_to "All Vehicles", admin_vehicles_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Pending", admin_vehicles_path(status: 'pending'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'pending' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Approved", admin_vehicles_path(status: 'approved'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'approved' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
        </div>
      </div>
    </div>

    <!-- Vehicles Grid -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @vehicles.each do |vehicle| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-gray-900"><%= vehicle.make %> <%= vehicle.model %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= vehicle.approved? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= vehicle.approved? ? 'Approved' : 'Pending' %>
              </span>
            </div>
            <dl class="space-y-2">
              <div>
                <dt class="text-sm text-gray-500">Plate Number</dt>
                <dd class="text-sm font-medium text-gray-900"><%= vehicle.plate %></dd>
              </div>
              <div>
                <dt class="text-sm text-gray-500">Color</dt>
                <dd class="text-sm font-medium text-gray-900"><%= vehicle.color %></dd>
              </div>
              <div>
                <dt class="text-sm text-gray-500">Driver</dt>
                <dd class="text-sm font-medium text-gray-900">
                  <%= link_to vehicle.user.name, admin_driver_path(vehicle.user), class: "text-indigo-600 hover:text-indigo-900" %>
                </dd>
              </div>
            </dl>
            <div class="mt-4 flex space-x-2">
              <%= link_to "View", admin_vehicle_path(vehicle), class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
              <% unless vehicle.approved? %>
                <%= button_to "Approve", approve_admin_vehicle_path(vehicle), method: :post, class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700", form: { data: { turbo: false } } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
