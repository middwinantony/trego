<div class="min-h-screen bg-gray-50">
  <%= render partial: 'admin/shared/nav', locals: { active: 'complaints' } %>

  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Complaints Management</h2>

    <!-- Filters -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex space-x-4">
          <%= link_to "All", admin_complaints_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status].blank? ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Open", admin_complaints_path(status: 'open'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'open' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "In Progress", admin_complaints_path(status: 'in_progress'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'in_progress' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
          <%= link_to "Resolved", admin_complaints_path(status: 'resolved'), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md #{params[:status] == 'resolved' ? 'bg-indigo-600 text-white' : 'text-gray-700 bg-white hover:bg-gray-50'}" %>
        </div>
      </div>
    </div>

    <!-- Complaints List -->
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @complaints.each do |complaint| %>
          <li>
            <div class="px-4 py-4 sm:px-6 hover:bg-gray-50">
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center justify-between">
                    <p class="text-sm font-medium text-indigo-600 truncate">
                      <%= complaint.subject %>
                    </p>
                    <div class="ml-2 flex-shrink-0">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                        <%= case complaint.status
                            when 'open' then 'bg-red-100 text-red-800'
                            when 'in_progress' then 'bg-yellow-100 text-yellow-800'
                            when 'resolved' then 'bg-green-100 text-green-800'
                            when 'closed' then 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= complaint.status.titleize %>
                      </span>
                    </div>
                  </div>
                  <div class="mt-2">
                    <p class="text-sm text-gray-700 line-clamp-2"><%= complaint.description %></p>
                  </div>
                  <div class="mt-2 sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <p class="flex items-center text-sm text-gray-500">
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <%= complaint.user.name %>
                      </p>
                      <p class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0 sm:ml-6">
                        <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <%= time_ago_in_words(complaint.created_at) %> ago
                      </p>
                    </div>
                  </div>
                </div>
                <div class="ml-5 flex-shrink-0">
                  <%= link_to "View", admin_complaint_path(complaint), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
