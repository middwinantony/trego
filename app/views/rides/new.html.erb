<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path do %>
            <h1 class="text-3xl font-bold text-indigo-600">Trego</h1>
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Dashboard", dashboard_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-lg transition duration-150" %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-3xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-xl p-8">
      <div class="mb-8">
        <h2 class="text-3xl font-extrabold text-gray-900">Request a Ride</h2>
        <p class="mt-2 text-gray-600">Enter your pickup and drop-off locations</p>
      </div>

      <%= form_with model: @ride, local: true, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :pickup, "Pickup Location", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :pickup, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base", placeholder: "Enter pickup address", required: true %>
        </div>

        <div>
          <%= f.label :dropoff, "Drop-off Location", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :dropoff, class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base", placeholder: "Enter drop-off address", required: true %>
        </div>

        <% if @drivers.any? %>
          <div>
            <%= f.label :driver_id, "Choose a Driver (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.collection_select :driver_id, @drivers, :id, :name, { prompt: "Any available driver" }, { class: "mt-1 block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-base" } %>
            <p class="mt-2 text-sm text-gray-500"><%= @drivers.count %> driver(s) available</p>
          </div>
        <% else %>
          <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 rounded">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  No drivers are currently available. Your ride request will be saved and drivers will be notified when they come online.
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="flex space-x-4">
          <%= f.submit "Request Ride", class: "flex-1 bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-3 px-6 rounded-lg transition duration-150 ease-in-out shadow-md hover:shadow-lg" %>
          <%= link_to "Cancel", dashboard_path, class: "flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-3 px-6 rounded-lg transition duration-150 ease-in-out text-center" %>
        </div>
      <% end %>
    </div>

    <!-- Recent Rides -->
    <% if current_user.rides_as_rider.any? %>
      <div class="mt-8 bg-white rounded-2xl shadow-md overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">Your Recent Rides</h3>
        </div>
        <div class="divide-y divide-gray-200">
          <% current_user.rides_as_rider.order(created_at: :desc).limit(3).each do |ride| %>
            <div class="px-6 py-4">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900"><%= ride.pickup %> â†’ <%= ride.dropoff %></p>
                  <p class="text-xs text-gray-500 mt-1"><%= ride.created_at.strftime("%B %d, %Y") %></p>
                </div>
                <span class="px-3 py-1 text-xs font-medium rounded-full <%= ride.status == 'completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= ride.status.titleize %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
