<% if current_user.driver? %>
  <!-- DRIVER VIEW: Keep existing table view -->
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <!-- Header -->
      <div class="mb-8">
        <h2 class="text-3xl font-extrabold text-gray-900">My Rides</h2>
        <p class="mt-2 text-gray-600">View all your completed and ongoing rides</p>
      </div>

      <!-- Stats Summary -->
      <div class="grid md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-md p-6">
          <div class="flex items-center">
            <div class="p-3 bg-blue-100 rounded-full">
              <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Total</p>
              <p class="text-2xl font-bold text-gray-900"><%= @rides.count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6">
          <div class="flex items-center">
            <div class="p-3 bg-yellow-100 rounded-full">
              <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Requested</p>
              <p class="text-2xl font-bold text-gray-900"><%= @rides.where(status: 'requested').count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6">
          <div class="flex items-center">
            <div class="p-3 bg-indigo-100 rounded-full">
              <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">In Progress</p>
              <p class="text-2xl font-bold text-gray-900"><%= @rides.where(status: ['accepted', 'in_progress']).count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6">
          <div class="flex items-center">
            <div class="p-3 bg-green-100 rounded-full">
              <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-600">Completed</p>
              <p class="text-2xl font-bold text-gray-900"><%= @rides.where(status: 'completed').count %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Rides Table -->
      <div class="bg-white rounded-xl shadow-md overflow-hidden">
        <% if @rides.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fare</th>
                  <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @rides.each do |ride| %>
                  <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm text-gray-900"><%= ride.created_at.strftime("%b %d, %Y") %></div>
                      <div class="text-xs text-gray-500"><%= ride.created_at.strftime("%I:%M %p") %></div>
                    </td>
                    <td class="px-6 py-4">
                      <div class="text-sm font-medium text-gray-900">
                        <svg class="inline h-4 w-4 text-green-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        </svg>
                        <%= truncate(ride.pickup, length: 30) %>
                      </div>
                      <div class="text-sm text-gray-500 mt-1">
                        <svg class="inline h-4 w-4 text-red-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        </svg>
                        <%= truncate(ride.dropoff, length: 30) %>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <div class="flex-shrink-0 h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center">
                          <span class="text-indigo-600 font-semibold"><%= ride.rider.name[0] %></span>
                        </div>
                        <div class="ml-3">
                          <div class="text-sm font-medium text-gray-900"><%= ride.rider.name %></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full <%= case ride.status when 'requested' then 'bg-yellow-100 text-yellow-800' when 'accepted' then 'bg-blue-100 text-blue-800' when 'in_progress' then 'bg-indigo-100 text-indigo-800' when 'completed' then 'bg-green-100 text-green-800' else 'bg-gray-100 text-gray-800' end %>">
                        <%= ride.status.titleize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="text-sm font-bold text-gray-900">$<%= number_with_precision(ride.fare, precision: 2) %></div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                      <%= link_to "View", ride_path(ride), class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="px-6 py-12 text-center">
            <p class="text-gray-600">No rides yet</p>
          </div>
        <% end %>
      </div>

      <div class="mt-6">
        <%= link_to "â† Back to Dashboard", dashboard_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      </div>
    </div>
  </div>

<% else %>
  <!-- RIDER VIEW: Screen 1 - Interactive Map Home -->
  <div class="relative h-screen w-screen overflow-hidden">
    <!-- Full-screen Map Container -->
    <div id="rider-home-map" class="absolute inset-0"></div>

    <!-- Floating Search Button -->
    <div class="absolute top-4 left-4 right-4 z-10">
      <button onclick="document.getElementById('search-modal').classList.remove('hidden')"
              class="w-full bg-white rounded-full shadow-lg px-6 py-4 flex items-center space-x-3 hover:shadow-xl transition">
        <svg class="h-6 w-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span class="text-lg text-gray-500">Where to?</span>
      </button>
    </div>

    <!-- Saved Locations Quick Access -->
    <% if @saved_locations.any? %>
      <div class="absolute top-24 left-4 right-4 z-10 space-y-2">
        <% @saved_locations.limit(2).each do |location| %>
          <%= link_to new_ride_path(pickup: "Current Location", dropoff: location.address),
                      class: "block bg-white rounded-xl shadow-md px-4 py-3 hover:shadow-lg transition" do %>
            <div class="flex items-center space-x-3">
              <div class="flex-shrink-0 h-10 w-10 bg-gray-100 rounded-full flex items-center justify-center">
                <svg class="h-5 w-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900"><%= location.name %></p>
                <p class="text-xs text-gray-500 truncate"><%= location.address %></p>
              </div>
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- Recent Trips Panel (Slide-up from bottom) -->
    <% if @recent_rides.any? %>
      <div class="absolute bottom-0 left-0 right-0 bg-white rounded-t-3xl shadow-2xl z-10 max-h-64 overflow-y-auto">
        <div class="px-4 py-4">
          <div class="w-12 h-1.5 bg-gray-300 rounded-full mx-auto mb-4"></div>
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Trips</h3>
          <div class="space-y-3">
            <% @recent_rides.each do |ride| %>
              <%= link_to ride_path(ride), class: "block hover:bg-gray-50 rounded-lg p-3 transition" do %>
                <div class="flex items-start space-x-3">
                  <div class="flex-shrink-0 h-10 w-10 bg-indigo-100 rounded-full flex items-center justify-center">
                    <svg class="h-5 w-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate"><%= ride.dropoff %></p>
                    <p class="text-xs text-gray-500"><%= ride.created_at.strftime("%b %d, %I:%M %p") %></p>
                  </div>
                  <div class="text-sm font-semibold text-gray-900">$<%= number_with_precision(ride.fare, precision: 2) %></div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Search Modal (Screen 2 will render here) -->
    <div id="search-modal" class="hidden fixed inset-0 bg-white z-50"></div>
  </div>

  <!-- Initialize Mapbox -->
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' />
  <script src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js'></script>
  <script>
    mapboxgl.accessToken = '<%= ENV["MAPBOX_ACCESS_TOKEN"] %>';
    const map = new mapboxgl.Map({
      container: 'rider-home-map',
      style: 'mapbox://styles/mapbox/streets-v12',
      center: [-79.3832, 43.6532], // Default: Toronto
      zoom: 12
    });

    // Add navigation controls
    map.addControl(new mapboxgl.NavigationControl());

    // Get user's current location
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        const userLocation = [position.coords.longitude, position.coords.latitude];

        // Center map on user location
        map.flyTo({ center: userLocation, zoom: 14 });

        // Add marker for user's location
        new mapboxgl.Marker({ color: '#4F46E5' })
          .setLngLat(userLocation)
          .setPopup(new mapboxgl.Popup().setHTML('<p>Your Location</p>'))
          .addTo(map);
      });
    }
  </script>
<% end %>
