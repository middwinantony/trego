<%# Screen 5: Driver Assigned - Show driver details and ETA %>
<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex items-center justify-between">
        <%= link_to rides_path, class: "text-gray-600 hover:text-gray-900" do %>
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        <% end %>
        <h1 class="text-xl font-semibold text-gray-900">Driver Assigned</h1>
        <div class="w-6"></div>
      </div>
    </div>
  </div>

  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Success Message -->
    <div class="bg-green-50 border border-green-200 rounded-xl p-4 mb-6">
      <div class="flex items-center space-x-3">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div>
          <p class="text-sm font-medium text-green-900">Driver found!</p>
          <p class="text-xs text-green-700">Your driver is on the way</p>
        </div>
      </div>
    </div>

    <!-- Driver Info Card -->
    <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
      <div class="flex items-center space-x-4 mb-6">
        <!-- Driver Photo -->
        <div class="flex-shrink-0">
          <% if @ride.driver.profile_photo.attached? %>
            <%= image_tag @ride.driver.profile_photo, class: "h-20 w-20 rounded-full object-cover" %>
          <% else %>
            <div class="h-20 w-20 rounded-full bg-indigo-100 flex items-center justify-center">
              <span class="text-2xl font-bold text-indigo-600"><%= @ride.driver.name[0] %></span>
            </div>
          <% end %>
        </div>

        <!-- Driver Details -->
        <div class="flex-1 min-w-0">
          <h3 class="text-xl font-bold text-gray-900"><%= @ride.driver.name %></h3>
          <div class="flex items-center mt-1">
            <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="ml-1 text-sm font-semibold text-gray-700"><%= @ride.driver.average_rating %></span>
            <span class="ml-1 text-sm text-gray-500">(<%= @ride.driver.ratings_received.count %> rides)</span>
          </div>
          <p class="text-sm text-gray-500 mt-1"><%= @ride.driver.phone %></p>
        </div>
      </div>

      <!-- Vehicle Info -->
      <% if @ride.driver.vehicles.any? %>
        <% vehicle = @ride.driver.vehicles.first %>
        <div class="border-t border-gray-200 pt-4">
          <div class="flex items-center space-x-3">
            <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path>
            </svg>
            <div>
              <p class="text-sm font-semibold text-gray-900"><%= vehicle.make %> <%= vehicle.model %></p>
              <p class="text-xs text-gray-500"><%= vehicle.color %> â€¢ <%= vehicle.plate %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Live ETA -->
    <div class="bg-indigo-600 rounded-xl shadow-lg p-6 mb-6 text-center">
      <p class="text-indigo-200 text-sm font-medium mb-2">Arriving in</p>
      <p class="text-5xl font-bold text-white">5 min</p>
      <p class="text-indigo-200 text-xs mt-2">Driver is on the way to pickup</p>
    </div>

    <!-- Action Buttons -->
    <div class="grid grid-cols-2 gap-4 mb-6">
      <%= link_to "tel:#{@ride.driver.phone}",
                  class: "flex items-center justify-center space-x-2 bg-white hover:bg-gray-50 border-2 border-gray-300 text-gray-700 font-semibold py-4 px-6 rounded-xl shadow transition" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span>Call</span>
      <% end %>

      <%= link_to "sms:#{@ride.driver.phone}",
                  class: "flex items-center justify-center space-x-2 bg-white hover:bg-gray-50 border-2 border-gray-300 text-gray-700 font-semibold py-4 px-6 rounded-xl shadow transition" do %>
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <span>Message</span>
      <% end %>
    </div>

    <!-- Mini Map Preview -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden mb-6">
      <div id="driver-assigned-map" class="h-64"></div>
    </div>

    <!-- Trip Details -->
    <div class="bg-white rounded-xl shadow-md p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Trip Details</h3>
      <div class="space-y-3">
        <div class="flex items-start space-x-3">
          <div class="h-3 w-3 rounded-full bg-green-500 mt-1.5 flex-shrink-0"></div>
          <div class="flex-1 min-w-0">
            <p class="text-xs text-gray-500">Pickup</p>
            <p class="text-sm font-medium text-gray-900"><%= @ride.pickup %></p>
          </div>
        </div>
        <div class="flex items-start space-x-3">
          <div class="h-3 w-3 rounded-full bg-red-500 mt-1.5 flex-shrink-0"></div>
          <div class="flex-1 min-w-0">
            <p class="text-xs text-gray-500">Dropoff</p>
            <p class="text-sm font-medium text-gray-900"><%= @ride.dropoff %></p>
          </div>
        </div>
        <div class="pt-3 border-t border-gray-200 flex justify-between">
          <div>
            <p class="text-xs text-gray-500">Ride Type</p>
            <p class="text-sm font-semibold text-gray-900"><%= @ride.ride_type.titleize %></p>
          </div>
          <div class="text-right">
            <p class="text-xs text-gray-500">Estimated Fare</p>
            <p class="text-sm font-bold text-gray-900">$<%= number_with_precision(@ride.fare, precision: 2) %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Cancel Ride (small link) -->
    <div class="mt-6 text-center">
      <button class="text-sm text-red-600 hover:text-red-800 font-medium">
        Cancel Ride
      </button>
    </div>
  </div>
</div>

<!-- Initialize Mapbox -->
<link href='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.css' rel='stylesheet' />
<script src='https://api.mapbox.com/mapbox-gl-js/v2.15.0/mapbox-gl.js'></script>
<script>
  mapboxgl.accessToken = '<%= ENV["MAPBOX_ACCESS_TOKEN"] %>';
  const map = new mapboxgl.Map({
    container: 'driver-assigned-map',
    style: 'mapbox://styles/mapbox/streets-v12',
    center: [<%= @ride.pickup_longitude %>, <%= @ride.pickup_latitude %>],
    zoom: 14
  });

  // Add pickup marker
  new mapboxgl.Marker({ color: '#10b981' })
    .setLngLat([<%= @ride.pickup_longitude %>, <%= @ride.pickup_latitude %>])
    .addTo(map);

  // Add driver marker if available
  <% if @ride.driver.current_latitude && @ride.driver.current_longitude %>
    new mapboxgl.Marker({ color: '#3b82f6' })
      .setLngLat([<%= @ride.driver.current_longitude %>, <%= @ride.driver.current_latitude %>])
      .addTo(map);

    // Fit bounds
    const bounds = new mapboxgl.LngLatBounds();
    bounds.extend([<%= @ride.pickup_longitude %>, <%= @ride.pickup_latitude %>]);
    bounds.extend([<%= @ride.driver.current_longitude %>, <%= @ride.driver.current_latitude %>]);
    map.fitBounds(bounds, { padding: 50 });
  <% end %>
</script>
