<%# Screen 2: Search Interface - Rendered as Turbo Frame %>
<turbo-stream action="update" target="search-results">
  <template>
    <div class="divide-y divide-gray-200">
      <%# Search Results from Mapbox %>
      <% if @results.any? %>
        <div class="py-2">
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Search Results</h3>
          <% @results.each do |result| %>
            <button type="button"
                    data-autocomplete-target="result"
                    data-address="<%= result[:address] %>"
                    data-latitude="<%= result[:coordinates][:latitude] %>"
                    data-longitude="<%= result[:coordinates][:longitude] %>"
                    data-name="<%= result[:name] %>"
                    data-action="click->autocomplete#select"
                    class="w-full text-left px-4 py-3 hover:bg-gray-50 transition flex items-start space-x-3">
              <svg class="h-5 w-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900"><%= result[:name] %></p>
                <p class="text-xs text-gray-500"><%= result[:address] %></p>
              </div>
            </button>
          <% end %>
        </div>
      <% end %>

      <%# Saved Locations %>
      <% if @saved_locations.any? %>
        <div class="py-2">
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Saved Locations</h3>
          <% @saved_locations.each do |location| %>
            <button type="button"
                    data-autocomplete-target="result"
                    data-address="<%= location.address %>"
                    data-latitude="<%= location.latitude %>"
                    data-longitude="<%= location.longitude %>"
                    data-name="<%= location.name %>"
                    data-action="click->autocomplete#select"
                    class="w-full text-left px-4 py-3 hover:bg-gray-50 transition flex items-start space-x-3">
              <div class="h-10 w-10 rounded-full flex items-center justify-center flex-shrink-0
                          <%= location.home? ? 'bg-green-100' : location.work? ? 'bg-blue-100' : 'bg-gray-100' %>">
                <% if location.home? %>
                  <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                <% elsif location.work? %>
                  <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                <% else %>
                  <svg class="h-5 w-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
                  </svg>
                <% end %>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900"><%= location.name %></p>
                <p class="text-xs text-gray-500 truncate"><%= location.address %></p>
              </div>
            </button>
          <% end %>
        </div>
      <% end %>

      <%# Recent Destinations %>
      <% if @recent_destinations.any? %>
        <div class="py-2">
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-2">Recent</h3>
          <% @recent_destinations.each do |destination| %>
            <button type="button"
                    data-autocomplete-target="result"
                    data-address="<%= destination %>"
                    data-action="click->autocomplete#select"
                    class="w-full text-left px-4 py-3 hover:bg-gray-50 transition flex items-start space-x-3">
              <svg class="h-5 w-5 text-gray-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate"><%= destination %></p>
              </div>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </template>
</turbo-stream>
