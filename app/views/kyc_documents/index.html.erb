<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <%= link_to dashboard_path, class: "text-sm text-indigo-600 hover:text-indigo-900 inline-flex items-center" do %>
        <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Dashboard
      <% end %>
      <h1 class="mt-4 text-3xl font-bold text-gray-900">KYC Documents</h1>
      <p class="mt-2 text-gray-600">Upload and manage your verification documents</p>
    </div>

    <!-- Upload New Document -->
    <div class="bg-indigo-50 border-l-4 border-indigo-600 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm text-indigo-700">
            Required documents: Driver's License, Vehicle Registration, and Vehicle Insurance
          </p>
          <p class="mt-2">
            <%= link_to "Upload New Document", new_kyc_document_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-600 bg-white hover:bg-indigo-50" %>
          </p>
        </div>
      </div>
    </div>

    <!-- Documents Grid -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <% @kyc_documents.each do |doc| %>
        <div class="bg-white overflow-hidden shadow rounded-lg">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-lg font-medium text-gray-900"><%= doc.document_type.titleize.gsub('_', ' ') %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                <%= case doc.status
                    when 'approved' then 'bg-green-100 text-green-800'
                    when 'rejected' then 'bg-red-100 text-red-800'
                    else 'bg-yellow-100 text-yellow-800'
                    end %>">
                <%= doc.status.titleize %>
              </span>
            </div>
            <div class="mb-4">
              <% if doc.file.attached? && doc.file.content_type.include?('image') %>
                <%= image_tag doc.file, class: "w-full h-48 object-cover rounded-lg" %>
              <% else %>
                <div class="w-full h-48 bg-gray-100 rounded-lg flex items-center justify-center">
                  <svg class="h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
              <% end %>
            </div>
            <dl class="space-y-2">
              <div>
                <dt class="text-sm text-gray-500">Uploaded</dt>
                <dd class="text-sm text-gray-900"><%= time_ago_in_words(doc.created_at) %> ago</dd>
              </div>
              <% if doc.status == 'rejected' %>
                <div>
                  <dt class="text-sm text-red-600 font-medium">Status: Rejected</dt>
                  <dd class="text-sm text-red-600">Please upload a new document</dd>
                </div>
              <% end %>
            </dl>
            <div class="mt-4">
              <%= link_to "View Details", kyc_document_path(doc), class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @kyc_documents.empty? %>
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No documents uploaded</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by uploading your first KYC document.</p>
        <div class="mt-6">
          <%= link_to "Upload Document", new_kyc_document_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
