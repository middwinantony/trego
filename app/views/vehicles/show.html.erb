<div class="min-h-screen bg-white">
  <!-- Navigation -->
  <nav class="bg-black shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path do %>
            <h1 class="text-3xl font-bold text-white">Trego</h1>
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Dashboard", dashboard_path, class: "text-white hover:text-gray-300 font-medium" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "bg-white hover:bg-gray-200 text-black font-medium py-2 px-4 rounded transition duration-150" %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-4xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <%= link_to vehicles_path, class: "text-sm text-black hover:text-gray-700 mb-6 inline-flex items-center" do %>
      <svg class="h-5 w-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Vehicles
    <% end %>

    <div class="bg-white shadow-md rounded-lg border border-gray-200 overflow-hidden mt-6">
      <!-- Vehicle Header -->
      <div class="px-6 py-6 border-b border-gray-200 bg-gray-50">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-2xl font-bold text-gray-900"><%= @vehicle.make %> <%= @vehicle.model %></h2>
            <p class="text-sm text-gray-500 mt-1">Plate: <%= @vehicle.plate %></p>
          </div>
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @vehicle.approved? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
            <%= @vehicle.approved? ? 'Approved' : 'Pending Approval' %>
          </span>
        </div>
      </div>

      <!-- Vehicle Details -->
      <div class="px-6 py-6">
        <div class="space-y-6">
          <!-- Basic Information -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Vehicle Information</h3>
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Make</dt>
                <dd class="text-sm text-gray-900 mt-1 font-semibold"><%= @vehicle.make %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Model</dt>
                <dd class="text-sm text-gray-900 mt-1 font-semibold"><%= @vehicle.model %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Year</dt>
                <dd class="text-sm text-gray-900 mt-1"><%= @vehicle.year || 'Not specified' %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Color</dt>
                <dd class="text-sm text-gray-900 mt-1"><%= @vehicle.color %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Plate Number</dt>
                <dd class="text-sm text-gray-900 mt-1 font-semibold"><%= @vehicle.plate %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="text-sm text-gray-900 mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @vehicle.approved? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= @vehicle.approved? ? 'Approved' : 'Pending' %>
                  </span>
                </dd>
              </div>
            </dl>
          </div>

          <!-- Approval Status Message -->
          <% unless @vehicle.approved? %>
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-yellow-700">
                    Your vehicle is pending approval. An admin will review it shortly.
                  </p>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Registration Details -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Registration Details</h3>
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">Registered On</dt>
                <dd class="text-sm text-gray-900 mt-1">
                  <%= @vehicle.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
                <dd class="text-sm text-gray-900 mt-1">
                  <%= @vehicle.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </div>

      <!-- Footer Actions -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <div class="flex justify-between items-center">
          <%= link_to vehicles_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            Back to Vehicles
          <% end %>
          <div class="flex space-x-3">
            <%= link_to "Edit", edit_vehicle_path(@vehicle), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
            <%= button_to "Delete", vehicle_path(@vehicle), method: :delete, data: { confirm: "Are you sure you want to delete this vehicle?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
