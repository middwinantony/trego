<div class="min-h-screen bg-white">
  <!-- Navigation -->
  <nav class="bg-black shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <%= link_to root_path do %>
            <h1 class="text-3xl font-bold text-white">Trego</h1>
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <%= link_to "Dashboard", dashboard_path, class: "text-white hover:text-gray-300 font-medium" %>
          <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "bg-white hover:bg-gray-200 text-black font-medium py-2 px-4 rounded transition duration-150" %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between mb-8">
      <div class="flex-1 min-w-0">
        <h2 class="text-3xl font-extrabold text-gray-900">My Vehicles</h2>
        <p class="mt-2 text-gray-600">Manage your registered vehicles</p>
      </div>
      <div class="mt-4 flex md:mt-0 md:ml-4">
        <%= link_to new_vehicle_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-black hover:bg-gray-800" do %>
          <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
          </svg>
          Add New Vehicle
        <% end %>
      </div>
    </div>

    <% if @vehicles.any? %>
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
        <% @vehicles.each do |vehicle| %>
          <div class="bg-white overflow-hidden shadow-md rounded-lg border border-gray-200">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900"><%= vehicle.make %> <%= vehicle.model %></h3>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= vehicle.approved? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= vehicle.approved? ? 'Approved' : 'Pending' %>
                </span>
              </div>

              <dl class="space-y-3">
                <div>
                  <dt class="text-sm font-medium text-gray-500">Plate Number</dt>
                  <dd class="text-sm text-gray-900 font-semibold"><%= vehicle.plate %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Color</dt>
                  <dd class="text-sm text-gray-900"><%= vehicle.color %></dd>
                </div>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Year</dt>
                  <dd class="text-sm text-gray-900"><%= vehicle.year || 'N/A' %></dd>
                </div>
              </dl>

              <div class="mt-6 flex space-x-3">
                <%= link_to "Edit", edit_vehicle_path(vehicle), class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
                <%= button_to "Delete", vehicle_path(vehicle), method: :delete, data: { confirm: "Are you sure you want to delete this vehicle?" }, class: "flex-1 inline-flex justify-center items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white shadow-md rounded-lg border border-gray-200">
        <div class="px-6 py-12 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2"></path>
          </svg>
          <h3 class="mt-4 text-lg font-medium text-gray-900">No vehicles registered</h3>
          <p class="mt-2 text-sm text-gray-500">Get started by adding your first vehicle.</p>
          <%= link_to new_vehicle_path, class: "mt-6 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-black hover:bg-gray-800" do %>
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Vehicle
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
