<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-8">
      <h2 class="text-4xl font-extrabold text-gray-900">
        Edit Vehicle Information
      </h2>
      <p class="mt-4 text-xl text-gray-600">
        Update your vehicle details
      </p>
    </div>

    <div class="bg-white rounded-xl shadow-lg p-8">
      <%= form_with(model: @vehicle, url: vehicle_path(@vehicle), method: :patch, class: "space-y-6") do |f| %>
        <% if @vehicle.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:
                </h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @vehicle.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :make, "Vehicle Make", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :make,
              placeholder: "e.g., Toyota, Honda, Ford",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition",
              required: true %>
        </div>

        <div>
          <%= f.label :model, "Vehicle Model", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :model,
              placeholder: "e.g., Camry, Civic, Focus",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition",
              required: true %>
        </div>

        <div>
          <%= f.label :plate, "License Plate Number", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :plate,
              placeholder: "e.g., ABC-1234",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition",
              required: true %>
        </div>

        <div>
          <%= f.label :color, "Vehicle Color", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :color,
              placeholder: "e.g., Black, White, Silver",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition",
              required: true %>
        </div>

        <% if !@vehicle.approved? %>
          <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm text-yellow-700">
                  Your vehicle is currently pending approval. After updating, it will need to be re-approved by an admin.
                </p>
              </div>
            </div>
          </div>
        <% end %>

        <div class="flex gap-4">
          <%= f.submit "Update Vehicle",
              class: "flex-1 px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition" %>
          <%= link_to "Cancel",
              dashboard_path,
              class: "flex-1 px-6 py-3 border border-gray-300 text-base font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition text-center" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
