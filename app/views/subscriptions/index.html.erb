<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h2 class="text-3xl font-extrabold text-gray-900">My Subscriptions</h2>
      <p class="mt-2 text-gray-600">Manage your subscription history</p>
    </div>

    <% if @subscriptions.any? %>
      <div class="space-y-4">
        <% @subscriptions.each do |subscription| %>
          <div class="bg-white rounded-lg shadow-md p-6 <%= subscription.active? ? 'border-l-4 border-green-500' : 'border-l-4 border-gray-300' %>">
            <div class="flex justify-between items-start">
              <div>
                <h3 class="text-xl font-semibold text-gray-900">
                  <%= Subscription::PLAN_TYPES[subscription.plan_type.to_sym][:name] %> Plan
                </h3>
                <p class="text-2xl font-bold text-indigo-600 mt-2">
                  $<%= subscription.amount %>
                </p>
                <div class="mt-4 space-y-1 text-sm text-gray-600">
                  <p><strong>Status:</strong>
                    <span class="<%= subscription.active? ? 'text-green-600 font-semibold' : 'text-gray-500' %>">
                      <%= subscription.status.capitalize %>
                    </span>
                  </p>
                  <p><strong>Started:</strong> <%= subscription.starts_at.strftime("%B %d, %Y") %></p>
                  <p><strong>Expires:</strong> <%= subscription.ends_at.strftime("%B %d, %Y at %I:%M %p") %></p>
                </div>
              </div>
              <div>
                <% if subscription.active? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                <% elsif subscription.expired? %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                    Expired
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                    <%= subscription.status.capitalize %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md p-8 text-center">
        <p class="text-gray-600 mb-4">You don't have any subscriptions yet.</p>
        <%= link_to "Get Started", new_subscription_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700" %>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <%= link_to "Back to Dashboard", dashboard_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>
  </div>
</div>
