<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
        Choose Your Plan
      </h2>
      <p class="mt-4 text-xl text-gray-600">
        Select a subscription plan to start accepting rides
      </p>
    </div>

    <%= form_with(model: @subscription, url: subscriptions_path, class: "space-y-8") do |f| %>
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Weekly Plan -->
        <label class="cursor-pointer">
          <input type="radio" name="subscription[plan_type]" value="weekly" class="peer sr-only" required>
          <div class="peer-checked:ring-4 peer-checked:ring-indigo-600 peer-checked:border-indigo-600 bg-white rounded-2xl shadow-xl p-8 border-4 border-transparent hover:border-indigo-300 transition-all duration-200 transform hover:-translate-y-1">
            <div class="text-center">
              <h3 class="text-2xl font-bold text-gray-900 mb-2">Weekly Plan</h3>
              <div class="mb-6">
                <span class="text-5xl font-extrabold text-indigo-600">$10</span>
                <span class="text-xl text-gray-600">/week</span>
              </div>
              <ul class="space-y-4 text-left mb-8">
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">Unlimited ride requests</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">Priority support</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">Flexible cancellation</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">7-day access</span>
                </li>
              </ul>
              <div class="text-sm text-gray-500">Perfect for part-time drivers</div>
            </div>
          </div>
        </label>

        <!-- Monthly Plan -->
        <label class="cursor-pointer">
          <input type="radio" name="subscription[plan_type]" value="monthly" class="peer sr-only" required>
          <div class="peer-checked:ring-4 peer-checked:ring-indigo-600 peer-checked:border-indigo-600 bg-white rounded-2xl shadow-xl p-8 border-4 border-transparent hover:border-indigo-300 transition-all duration-200 transform hover:-translate-y-1 relative">
            <div class="absolute top-0 right-0 bg-green-500 text-white px-4 py-1 rounded-bl-lg rounded-tr-lg text-sm font-semibold">
              Save 50%
            </div>
            <div class="text-center">
              <h3 class="text-2xl font-bold text-gray-900 mb-2">Monthly Plan</h3>
              <div class="mb-6">
                <span class="text-5xl font-extrabold text-indigo-600">$50</span>
                <span class="text-xl text-gray-600">/month</span>
              </div>
              <ul class="space-y-4 text-left mb-8">
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">Unlimited ride requests</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">Priority support</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">Flexible cancellation</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700">30-day access</span>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-700 font-semibold">Best value for full-time drivers</span>
                </li>
              </ul>
              <div class="text-sm text-gray-500">Recommended for full-time drivers</div>
            </div>
          </div>
        </label>
      </div>

      <div class="text-center">
        <%= f.submit "Activate Subscription", class: "inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out shadow-lg" %>
      </div>

      <p class="text-center text-sm text-gray-600 mt-4">
        Cancel anytime. No hidden fees.
      </p>
    <% end %>
  </div>
</div>
