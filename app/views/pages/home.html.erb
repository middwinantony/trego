<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
  <!-- Navigation -->
  <nav class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <h1 class="text-3xl font-bold text-indigo-600">Trego</h1>
        </div>
        <div class="flex items-center space-x-4">
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-lg transition duration-150" %>
          <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600 font-medium" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <% if user_signed_in? %>
    <!-- Logged in user view -->
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-extrabold text-gray-900 sm:text-5xl">
          Welcome back, <%= current_user.name %>!
        </h2>
        <p class="mt-4 text-xl text-gray-600">
          <%= current_user.driver? ? "Ready to start earning?" : "Where would you like to go?" %>
        </p>
      </div>

      <div class="flex justify-center space-x-6">
        <% if current_user.customer? %>
          <%= link_to new_ride_path, class: "group" do %>
            <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition duration-200 transform hover:-translate-y-1 w-64">
              <div class="text-center">
                <div class="mx-auto h-16 w-16 bg-indigo-100 rounded-full flex items-center justify-center mb-4">
                  <svg class="h-10 w-10 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Request a Ride</h3>
                <p class="text-gray-600">Book your ride now</p>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= link_to dashboard_path, class: "group" do %>
            <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition duration-200 transform hover:-translate-y-1 w-64">
              <div class="text-center">
                <div class="mx-auto h-16 w-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
                  <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">View Rides</h3>
                <p class="text-gray-600">See available rides</p>
              </div>
            </div>
          <% end %>
        <% end %>

        <%= link_to dashboard_path, class: "group" do %>
          <div class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition duration-200 transform hover:-translate-y-1 w-64">
            <div class="text-center">
              <div class="mx-auto h-16 w-16 bg-purple-100 rounded-full flex items-center justify-center mb-4">
                <svg class="h-10 w-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Dashboard</h3>
              <p class="text-gray-600">View your activity</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- Landing page for non-logged in users -->
    <!-- Hero Section -->
    <div class="relative overflow-hidden">
      <div class="max-w-7xl mx-auto">
        <div class="relative z-10 pb-8 sm:pb-16 md:pb-20 lg:pb-28 xl:pb-32">
          <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
            <div class="text-center">
              <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
                <span class="block">Your ride, your way</span>
                <span class="block text-indigo-600">Join Trego today</span>
              </h1>
              <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
                Whether you're looking for a ride or want to earn money driving, Trego connects riders and drivers in your city.
              </p>
            </div>
          </main>
        </div>
      </div>
    </div>

    <!-- Sign Up Options -->
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Customer Sign Up -->
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden transform hover:-translate-y-2 transition duration-200">
          <div class="px-6 py-8">
            <div class="flex justify-center mb-6">
              <div class="h-20 w-20 bg-indigo-100 rounded-full flex items-center justify-center">
                <svg class="h-12 w-12 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 text-center mb-4">Ride with Trego</h3>
            <p class="text-gray-600 text-center mb-6">Request a ride and get to your destination safely and comfortably.</p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start">
                <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">Safe and reliable rides</span>
              </li>
              <li class="flex items-start">
                <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">Affordable pricing</span>
              </li>
              <li class="flex items-start">
                <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">24/7 availability</span>
              </li>
            </ul>
            <%= link_to "Sign Up as Customer", new_user_registration_path(role: 'customer'), class: "block w-full text-center py-3 px-4 border border-transparent text-base font-medium rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out" %>
          </div>
        </div>

        <!-- Driver Sign Up -->
        <div class="bg-white rounded-2xl shadow-2xl overflow-hidden transform hover:-translate-y-2 transition duration-200 border-2 border-indigo-500">
          <div class="bg-indigo-600 px-6 py-3">
            <p class="text-center text-white font-semibold">Start Earning Today</p>
          </div>
          <div class="px-6 py-8">
            <div class="flex justify-center mb-6">
              <div class="h-20 w-20 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="h-12 w-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 text-center mb-4">Drive with Trego</h3>
            <p class="text-gray-600 text-center mb-6">Turn your car into a money-making machine. Drive on your own schedule.</p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start">
                <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">Flexible schedule</span>
              </li>
              <li class="flex items-start">
                <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">Weekly: $10 | Monthly: $50</span>
              </li>
              <li class="flex items-start">
                <svg class="h-6 w-6 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">Earn money on your terms</span>
              </li>
            </ul>
            <%= link_to "Sign Up as Driver", new_user_registration_path(role: 'driver'), class: "block w-full text-center py-3 px-4 border border-transparent text-base font-medium rounded-lg text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Features Section -->
    <div class="bg-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-extrabold text-gray-900">Why Choose Trego?</h2>
        </div>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="flex justify-center mb-4">
              <div class="h-16 w-16 bg-indigo-100 rounded-full flex items-center justify-center">
                <svg class="h-10 w-10 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Safe & Secure</h3>
            <p class="text-gray-600">Your safety is our priority with verified drivers and secure payments</p>
          </div>
          <div class="text-center">
            <div class="flex justify-center mb-4">
              <div class="h-16 w-16 bg-green-100 rounded-full flex items-center justify-center">
                <svg class="h-10 w-10 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Fast & Reliable</h3>
            <p class="text-gray-600">Quick pickup times and reliable service whenever you need it</p>
          </div>
          <div class="text-center">
            <div class="flex justify-center mb-4">
              <div class="h-16 w-16 bg-purple-100 rounded-full flex items-center justify-center">
                <svg class="h-10 w-10 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Affordable Rates</h3>
            <p class="text-gray-600">Competitive pricing for riders and fair earnings for drivers</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
