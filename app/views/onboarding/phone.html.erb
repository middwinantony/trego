<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-xl overflow-hidden" style="height: 667px;">
    <div class="h-full flex flex-col p-8">
      <!-- Back Button -->
      <%= link_to onboarding_welcome_path, class: "inline-flex items-center text-gray-700 hover:text-gray-900 mb-8" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>

      <!-- Title -->
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Enter your phone number</h2>
      <p class="text-gray-600 mb-8">We'll send you a verification code</p>

      <!-- Form -->
      <%= form_with url: onboarding_send_code_path, method: :post, class: "flex-1" do |f| %>
        <%= f.hidden_field :role, value: params[:role] %>

        <div class="mb-8">
          <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
          <div class="flex space-x-3">
            <div class="w-20">
              <%= f.text_field :country_code, value: "+1",
                  class: "w-full px-4 py-3 bg-gray-100 border-0 rounded-xl text-gray-900 focus:ring-2 focus:ring-blue-600 focus:bg-white transition" %>
            </div>
            <div class="flex-1">
              <%= f.telephone_field :phone, placeholder: "(555) 123-4567",
                  class: "w-full px-4 py-3 bg-gray-100 border-0 rounded-xl text-gray-900 focus:ring-2 focus:ring-blue-600 focus:bg-white transition",
                  required: true %>
            </div>
          </div>
        </div>

        <div class="mt-auto">
          <%= f.submit "Continue",
              class: "w-full bg-gray-300 text-white font-semibold py-4 rounded-2xl hover:bg-gray-400 transition duration-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
