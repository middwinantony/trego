<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-xl overflow-hidden" style="height: 667px;">
    <div class="h-full flex flex-col p-8">
      <!-- Back Button -->
      <%= link_to "#", class: "inline-flex items-center text-gray-700 hover:text-gray-900 mb-8" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      <% end %>

      <!-- Title -->
      <h2 class="text-2xl font-bold text-gray-900 mb-2">Set up your profile</h2>
      <p class="text-gray-600 mb-8">Tell us a bit about yourself</p>

      <!-- Form -->
      <%= form_with url: onboarding_create_profile_path, method: :post, multipart: true, class: "flex-1 flex flex-col" do |f| %>
        <!-- Profile Photo -->
        <div class="flex justify-center mb-8">
          <div class="relative">
            <div class="w-32 h-32 bg-gray-200 rounded-full flex items-center justify-center overflow-hidden" id="profile-photo-preview">
              <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <label for="profile-photo-input" class="absolute bottom-0 right-0 bg-blue-600 text-white p-2 rounded-full cursor-pointer hover:bg-blue-700 transition">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            </label>
            <%= f.file_field :profile_photo, accept: "image/*", class: "hidden", id: "profile-photo-input" %>
          </div>
        </div>

        <!-- Full Name -->
        <div class="mb-6">
          <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
          <%= f.text_field :name, placeholder: "John Doe",
              class: "w-full px-4 py-3 bg-gray-100 border-0 rounded-xl text-gray-900 focus:ring-2 focus:ring-blue-600 focus:bg-white transition",
              required: true %>
        </div>

        <!-- Email -->
        <div class="mb-8">
          <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
          <%= f.email_field :email, placeholder: "john@example.com",
              class: "w-full px-4 py-3 bg-gray-100 border-0 rounded-xl text-gray-900 focus:ring-2 focus:ring-blue-600 focus:bg-white transition",
              required: true %>
        </div>

        <!-- Submit Button -->
        <div class="mt-auto">
          <%= f.submit "Continue",
              class: "w-full bg-gray-300 text-white font-semibold py-4 rounded-2xl hover:bg-gray-400 transition duration-200 cursor-pointer" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.getElementById('profile-photo-input').addEventListener('change', function(e) {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        document.getElementById('profile-photo-preview').innerHTML =
          `<img src="${e.target.result}" class="w-full h-full object-cover" alt="Profile">`;
      };
      reader.readAsDataURL(file);
    }
  });
</script>
