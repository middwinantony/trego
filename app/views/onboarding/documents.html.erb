<div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-xl overflow-hidden" style="height: 667px;">
    <div class="h-full flex flex-col justify-between p-8">
      <!-- Header -->
      <div>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Upload your documents</h2>
        <p class="text-gray-600 mb-8">We need to verify a few things before you can start driving</p>
      </div>

      <!-- Document Upload Cards -->
      <div class="flex-1 space-y-4 overflow-y-auto">
        <!-- Driver's License -->
        <div class="bg-white border-2 border-gray-200 rounded-2xl p-5">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="bg-gray-100 rounded-full p-2 mr-3">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V8a2 2 0 00-2-2h-5m-4 0V5a2 2 0 114 0v1m-4 0a2 2 0 104 0m-5 8a2 2 0 100-4 2 2 0 000 4zm0 0c1.306 0 2.417.835 2.83 2M9 14a3.001 3.001 0 00-2.83 2M15 11h3m-3 4h2" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900">Driver's License</h3>
            </div>
          </div>
          <%= form_with url: kyc_documents_path, method: :post, multipart: true, local: true do |f| %>
            <%= f.hidden_field :document_type, value: "driver's_license" %>
            <label class="cursor-pointer">
              <div class="flex items-center justify-center bg-blue-600 text-white font-semibold py-3 rounded-xl hover:bg-blue-700 transition duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                Upload Document
              </div>
              <%= f.file_field :file, accept: "image/*,.pdf", class: "hidden", onchange: "this.form.submit()" %>
            </label>
          <% end %>
        </div>

        <!-- Vehicle Registration -->
        <div class="bg-white border-2 border-gray-200 rounded-2xl p-5">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="bg-gray-100 rounded-full p-2 mr-3">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900">Vehicle Registration</h3>
            </div>
          </div>
          <%= form_with url: kyc_documents_path, method: :post, multipart: true, local: true do |f| %>
            <%= f.hidden_field :document_type, value: "vehicle_registration" %>
            <label class="cursor-pointer">
              <div class="flex items-center justify-center bg-blue-600 text-white font-semibold py-3 rounded-xl hover:bg-blue-700 transition duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                Upload Document
              </div>
              <%= f.file_field :file, accept: "image/*,.pdf", class: "hidden", onchange: "this.form.submit()" %>
            </label>
          <% end %>
        </div>

        <!-- Insurance -->
        <div class="bg-white border-2 border-gray-200 rounded-2xl p-5">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center">
              <div class="bg-gray-100 rounded-full p-2 mr-3">
                <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="font-semibold text-gray-900">Insurance</h3>
            </div>
          </div>
          <%= form_with url: kyc_documents_path, method: :post, multipart: true, local: true do |f| %>
            <%= f.hidden_field :document_type, value: "vehicle_insurance" %>
            <label class="cursor-pointer">
              <div class="flex items-center justify-center bg-blue-600 text-white font-semibold py-3 rounded-xl hover:bg-blue-700 transition duration-200">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
                Upload Document
              </div>
              <%= f.file_field :file, accept: "image/*,.pdf", class: "hidden", onchange: "this.form.submit()" %>
            </label>
          <% end %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="mt-6">
        <%= link_to "Submit for Review", dashboard_path,
            class: "block w-full bg-gray-300 text-white text-center font-semibold py-4 rounded-2xl hover:bg-gray-400 transition duration-200" %>
      </div>
    </div>
  </div>
</div>
